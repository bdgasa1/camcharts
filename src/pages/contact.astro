---
import "../styles/global.css";
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact Us - Cambridge Construction Intelligence</title>
  </head>

  <body>
    <Header />

    <!-- Contact Page Section -->
    <section class="contact-page">
      <div class="container contact-grid">
        <!-- Left column: Contact info -->
        <div class="contact-info">
          <h2>Contact Us</h2>
          <p class="subtitle">Weâ€™d love to hear from you</p>
          <p>
            Cambridge Construction Intelligence <br />
            <br />
          </p>
          <p>Email: <a href="mailto:info@cambridgeci.com">info@cambridgeci.com</a></p>
        </div>

        <!-- Right column: Contact form -->
        <div class="contact-form">
          <form action="#" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Your name" required />

            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Your email" required />

            <label for="message">Message</label>
            <textarea id="message" name="message" placeholder="Your message" rows="6" required></textarea>

            <button type="submit" class="button">Send Message</button>
          </form>
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

<style>
/* Contact Page Grid */
.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: start;
  margin-top: 80px;
  margin-bottom: 80px;
}

.contact-info h2 {
  font-size: 36px;
  color: #333F48;
  margin-bottom: 12px;
}

.contact-info .subtitle {
  color: #E9560D;
  font-weight: bold;
  margin-bottom: 24px;
}

.contact-info p {
  font-size: 18px;
  color: #333F48;
  margin-bottom: 12px;
  line-height: 1.6;
}

.contact-info a {
  color: #E9560D;
}

.contact-form form {
  display: flex;
  flex-direction: column;
}

.contact-form label {
  font-weight: 600;
  margin-bottom: 6px;
  font-size: 16px;
}

.contact-form input,
.contact-form textarea {
  padding: 12px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 16px;
  font-family: 'Poppins', sans-serif;
}

.contact-form .button {
  width: fit-content;
}

/* Responsive */
@media (max-width: 1024px) {
  .contact-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .contact-info h2 {
    font-size: 28px;
  }

  .contact-info p,
  .contact-form input,
  .contact-form textarea {
    font-size: 16px;
  }
}
</style>
